<script>
    let darkMode = false;

    function toggleTheme() {
        darkMode = !darkMode;
        document.body.classList.toggle("dark");

        document.getElementById("img1").src = darkMode ? "arb1b.png" : "arb1a.png";
        document.getElementById("img2").src = darkMode ? "arb2b.png" : "arb2a.png";
    }
</script>

